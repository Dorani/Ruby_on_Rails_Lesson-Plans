
<%= render "shared/errors", obj: @article %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class='form-group'>
          <div class="control-label col-sm-2">
            <%= f.label :title %>
          </div>
          <div class='col-lg-12'>
            <%= f.text_field :title, class:"form-control", placeholder: "Title of Article" %>
          </div>
        </div>

        <div class='form-group'>
          <div class="control-label col-sm-2">
            <%= f.label :description %>
          </div>
          <div class='col-lg-12'>
            <%= f.text_area :description, rows: 10, class:"form-control", placeholder: "Body of Article", autofocus: true %>
          </div>
        </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class:"btn btn-primary btn-lg" %>
        </div>
      </div>


    <% end %>

    <%= link_to "Cancel request and return to articles", articles_path %>
 </div>
</div>
